# ~/.bash_profile  (ή ~/.bashrc ή ~/.zshrc – ό,τι χρησιμοποιείς)

# Golang
export PATH="$HOME/.local/bin:$PATH"
export GOPATH=$HOME/go
export PATH=$GOPATH/bin:$PATH

# NPM global
export PATH=$HOME/.npm-global/bin:$PATH

# Default apps
export EDITOR=nvim
export VISUAL=nvim
export BROWSER=qutebrowser
export TERMINAL=ghostty

# Clipboard για qutebrowser κλπ σε Wayland
export QUTE_CLIPBOARD=wl-copy

# ─────────────────────────────────────────────
# AMD RX 6900 XT – Hardware Acceleration (Wayland)
# ─────────────────────────────────────────────
export MESA_LOADER_DRIVER_OVERRIDE=radeonsi
export AMD_VULKAN_ICD=RADV
export LIBVA_DRIVER_NAME=radeonsi        # VAAPI video decoding (mpv, firefox κλπ)
export VDPAU_DRIVER=radeonsi             # VDPAU fallback (σπάνια χρειάζεται)

# Extra tweaks (ενημερωμένα για Mesa 25+ και Steam - 2025)
# export AMD_DEBUG=nodcc                 # ΑΠΕΝΕΡΓΟΠΟΙΗΜΕΝΟ - προκαλεί προβλήματα σε νέα games
export RADV_PERFTEST=gpl,nggc            # GPL (Graphics Pipeline Library) + NGGC για καλύτερο performance
export RADV_DEBUG=novrsflatshading       # Fixes για AMD RDNA2/3
export DISABLE_LAYER_AMD_SWITCHABLE_GRAPHICS_1=1  # Disable switchable graphics (desktop GPU)

# ─────────────────────────────────────────────
# Wayland scaling (Niri – μόνο αυτά χρειάζονται συνήθως)
# ─────────────────────────────────────────────
export GDK_SCALE=1                # GTK apps ακολουθούν το scaling του Niri
export QT_QPA_PLATFORM=wayland    # εξαναγκάζει Qt apps σε Wayland
export QT_WAYLAND_DISABLE_WINDOWDECORATION=1   # καθαρές γραμμές στα Qt παράθυρα

# ─────────────────────────────────────────────
# Optional – Mangohud σε όλα τα Vulkan/OpenGL παιχνίδια
# ─────────────────────────────────────────────
export MANGOHUD=1
export MANGOHUD_CONFIG=cpu_stats,gpu_stats,frame_timing,fps

# ─────────────────────────────────────────────
# Steam Runtime Fix (για Vulkan compatibility με Mesa 25+)
# ─────────────────────────────────────────────
export STEAM_RUNTIME_PREFER_HOST_LIBRARIES=1  # Χρησιμοποιεί τις νέες system libraries
export VK_ICD_FILENAMES=/usr/share/vulkan/icd.d/radeon_icd.x86_64.json:/usr/share/vulkan/icd.d/radeon_icd.i686.json  # Force system Vulkan ICD
